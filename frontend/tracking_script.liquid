<script>
  (function() {
    // --- CONFIGURATION ---
    const COOKIE_DAYS = 30; // User Requirement: 30 Days
    const ATTRIBUTE_NAME = 'affiliate_id';

    // 1. Read ?aff= from URL or Cookie
    const urlParams = new URLSearchParams(window.location.search);
    let affiliateId = urlParams.get('aff');

    // Helper: Set Cookie
    function setCookie(name, value, days) {
      let expires = "";
      if (days) {
        const date = new Date();
        date.setTime(date.getTime() + (days * 24 * 60 * 60 * 1000));
        expires = "; expires=" + date.toUTCString();
      }
      document.cookie = name + "=" + (value || "") + expires + "; path=/";
    }

    // Helper: Get Cookie
    function getCookie(name) {
      const nameEQ = name + "=";
      const ca = document.cookie.split(';');
      for (let i = 0; i < ca.length; i++) {
        let c = ca[i];
        while (c.charAt(0) == ' ') c = c.substring(1, c.length);
        if (c.indexOf(nameEQ) == 0) return c.substring(nameEQ.length, c.length);
      }
      return null;
    }

    // 2. Process New Affiliate Link
    if (affiliateId) {
      setCookie(ATTRIBUTE_NAME, affiliateId, COOKIE_DAYS);
      
      // FIRE AND FORGET - Backend Click Tracking
      fetch('https://copperaa-affiliate-app.onrender.com/api/track/click', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ 
          affiliateCode: affiliateId,
          userAgent: navigator.userAgent
        })
      }).catch(err => console.error('Tracking error', err));
    } else {
      // Logic: Retrieve from cookie if not in URL (Persistence)
      affiliateId = getCookie(ATTRIBUTE_NAME);
    }

    // 3. APPLY TO SHOPIFY ECOSYSTEM (Crucial for Buy Now / Cart)
    if (affiliateId) {
      
      // A. AJAX Sync (For Standard Cart)
      fetch('/cart.js')
        .then(res => res.json())
        .then(cart => {
          if (cart.attributes[ATTRIBUTE_NAME] !== affiliateId) {
            fetch('/cart/update.js', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                attributes: { [ATTRIBUTE_NAME]: affiliateId }
              })
            }).then(() => console.log('Affiliate synced to cart via AJAX'));
          }
        })
        .catch(console.error);

      // B. FORM INJECTION (For "Buy It Now" & Product Pages)
      // This injects a hidden input into all Add to Cart forms
      document.addEventListener('DOMContentLoaded', () => {
        const forms = document.querySelectorAll('form[action^="/cart/add"]');
        forms.forEach(form => {
          // Check if input already exists
          if (!form.querySelector(`input[name="attributes[${ATTRIBUTE_NAME}]"]`)) {
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = `attributes[${ATTRIBUTE_NAME}]`;
            input.value = affiliateId;
            form.appendChild(input);
            console.log('Affiliate injected into Form');
          }
        });
      });
    }
  })();
</script>
